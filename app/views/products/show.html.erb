<%= image_tag @product.featured_image if @product.featured_image.attached? %>

<% cache @product do %>
    <h1><%= @product.name %></h1>
    <%= @product.description %>
<% end %>

<%= link_to "Quay lại", products_path %>

<% if authenticated? %>
  <%= link_to "Chỉnh sửa", edit_product_path(@product) %>
  <%= button_to "Xóa", @product, method: :delete, data: { turbo_confirm: "Bạn có chắc chắn?" } %>
<% end %>
